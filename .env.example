# GrowAI LMS Environment Variables
# Copy this file to .env and fill in your actual keys
# WARNING: Never commit .env to version control!

# ============================================
# Google Cloud / Gemini AI
# ============================================
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_EMBEDDING_MODEL=gemini-embedding-001
GOOGLE_EMBEDDING_TASK=RETRIEVAL_DOCUMENT

# ============================================
# Gemini Model Settings
# ============================================
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_OUTPUT_TOKENS=4096
GEMINI_HTTP_TIMEOUT=PT60S
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# ============================================
# Qdrant Vector Database
# ============================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=
QDRANT_COLLECTION=video_summary_vectors_gemini
QDRANT_USE_TLS=false
QDRANT_INIT_SCHEMA=true

# ============================================
# External APIs
# ============================================
JOBKOREA_API_KEY=your-jobkorea-api-key
KEIS_API_KEY=your-keis-api-key
NCS_API_KEY=your-ncs-api-key

# ============================================
# SMS / Notification
# ============================================
ALIGO_API_KEY=your-aligo-api-key
ALIGO_USER_ID=your-aligo-user-id
KAKAO_API_KEY=your-kakao-api-key
KAKAO_SENDER_KEY=your-kakao-sender-key

# ============================================
# Kollus Video
# ============================================
KOLLUS_DOMAIN=
KOLLUS_SERVICE_ACCOUNT=
KOLLUS_API_KEY=
KOLLUS_PLAYER_BASE_URL=https://v.kr.kollus.com

# ============================================
# Statistics AI
# ============================================
STATISTICS_AI_ENABLED=true
STATISTICS_AI_API_KEY=
STATISTICS_AI_MODEL=gemini-2.0-flash
STATISTICS_AI_DEBUG=false
